@page
@model IndexModel
@{
    // Put any dotnetcore code here ..
    // return View();
}

<div class="esh-orders">
    <div class="container">
        <!-- <h1>@ViewData["Title"]</h1> -->
        <h1>MongoDB output here is cool .. @Model.Id @Model.Quote </h1>
        <article class="esh-orders-titles row">
            <section class="esh-orders-title col-xs-2">Order number</section>
            <section class="esh-orders-title col-xs-4">Date</section>
            <section class="esh-orders-title col-xs-2">Total</section>
            <section class="esh-orders-title col-xs-2">Status</section>
            <section class="esh-orders-title col-xs-2"></section>
        </article>

        <article class="esh-orders-items row">
          <section class="esh-orders-item col-xs-2">123456</section>
          <section class="esh-orders-item col-xs-4">2018-10-01</section>
          <section class="esh-orders-item col-xs-2">$ 5.00</section>
          <section class="esh-orders-item col-xs-2">GOOD!</section>
          <section class="esh-orders-item col-xs-1">
            <a class="esh-orders-link" asp-page="Detail" asp-route-orderId="11">Detail</a>
          </section>
          <section class="esh-orders-item col-xs-1">
          </section>
        </article>
        @if (Model.Quotes != null)
        {
        <h2>Result</h2>
                foreach (var vm in Model.Quotes)
                {
                    <article class="esh-orders-items row">
                        <section class="esh-orders-item col-xs-2">@vm.Id</section>
                        <section class="esh-orders-item col-xs-4">@vm.Quote</section>
                        <section class="esh-orders-item col-xs-2">$ 5.00</section>
                        <section class="esh-orders-item col-xs-2">@vm.Name</section>
                        <section class="esh-orders-item col-xs-1">
                            <a class="esh-orders-link" asp-page="Detail" asp-route-orderId="@vm.Id">Detail</a>
                        </section>
                        <section class="esh-orders-item col-xs-1"></section>
                    </article>
                }
        }
        </div>
        <div class="container">
        <!-- Start from MongoDB -->
        @if (Model.QuotesMongoDB != null) {
        <h2>MongoDB Result</h2>
                foreach (var vm in Model.QuotesMongoDB)
                {
                    <article class="esh-orders-items row">
                        <!-- <section class="esh-orders-item col-xs-2">ID#</section> -->
                        <section class="esh-orders-item col-xs-4">@vm.Quote</section>
                        <!-- <section class="esh-orders-item col-xs-2">$ 5.00</section> -->
                        <section class="esh-orders-item col-xs-2">@vm.Name</section>
                        <!-- <section class="esh-orders-item col-xs-1">
                            <a class="esh-orders-link" asp-page="Detail">Detail</a>
                        </section> -->
                        <section class="esh-orders-item col-xs-1"></section>
                    </article>
                }
        } else {
            <p>FOUND NOTHING!!</p>
        }
    </div>
</div>